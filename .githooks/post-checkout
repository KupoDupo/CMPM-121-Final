#!/usr/bin/env bash

# Post-checkout hook - automatically set up Git hooks after clone or checkout
# This runs automatically after git clone or git checkout

HOOKS_DIR=".githooks"

# Check if hooks directory exists
if [ -d "$HOOKS_DIR" ]; then
    # Make pre-commit hook executable
    chmod +x "$HOOKS_DIR/pre-commit" 2>/dev/null
    
    # Configure Git to use our hooks directory
    git config core.hooksPath "$HOOKS_DIR"
    
    echo "âœ… Git hooks automatically configured!"
fi
